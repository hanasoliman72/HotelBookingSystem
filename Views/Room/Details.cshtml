@model BookingSystem.Models.Room
@{
    ViewData["Title"] = "Room Details";

    var imageUrl = !string.IsNullOrEmpty(Model.ImageUrl)
        ? Url.Content(Model.ImageUrl)
        : Url.Content("~/assets/img/rooms/room-placeholder.jpg");
}

<main>
    <div class="container py-5">
        <h1 class="mb-4">@Model.RoomClass?.Type - Room Details</h1>

        <div class="row">
            <div class="col-md-6">
                <img src="@imageUrl" alt="Room Image" class="img-fluid" style="height: 400px; object-fit: cover;">
            </div>

            <div class="col-md-6">
                <h3>@Model.RoomClass?.Type</h3>
                <p><strong>Description:</strong> @Model.RoomClass?.Description</p>
                <p><strong>Floor:</strong> @Model.Floor</p>
                <p><strong>Price per Night:</strong> $@Model.Price</p>
                <p>
                    <strong>Status:</strong>
                    @switch (Model.Status)
                    {
                        case RoomStatus.Available:
                            <span class="badge bg-success text-dark">Available</span>
                            break;
                        case RoomStatus.Occupied:
                            <span class="badge bg-danger text-dark">Occupied</span>
                            break;
                        case RoomStatus.Maintenance:
                            <span class="badge bg-warning text-dark">Maintenance</span>
                            break;
                        default:
                            <span class="badge bg-secondary text-dark">Unknown</span>
                            break;
                    }
                </p>

                <p><strong>Number of Beds:</strong> @Model.RoomClass?.NumberOfBeds</p>

                <a href="@Url.Action("Create", "Booking", new { roomId = Model.ID })" class="btn btn-outline-primary">
                    <i class="fas fa-calendar-check me-1"></i> Book Now
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Edit", "Room", new { id = Model.ID })" class="btn btn-warning btn-sm mt-2">
                        <i class="fas fa-edit me-1"></i> Edit
                    </a>

                    <a href="@Url.Action("Delete", "Room", new { id = Model.ID })"
                       class="btn btn-danger btn-sm mt-2"
                       onclick="return confirm('Are you sure you want to delete this room?');">
                        <i class="fas fa-trash-alt me-1"></i> Delete
                    </a>
                }
            </div>
        </div>
    </div>
</main>
