@model Room

@{
    ViewData["Title"] = "Edit Room";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Edit Room</h2>

    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-white">
        <div class="mb-3">
            <label asp-for="RoomClassID" class="form-label">Room Class</label>
            <select asp-for="RoomClassID" class="form-select">
                <option value="">-- Select Room Class --</option>
                @foreach (var roomClass in ViewBag.RoomClasses as List<BookingSystem.Models.RoomClass>)
                {
                    <option value="@roomClass.ID" selected="@(roomClass.ID == Model.RoomClassID)">
                        @roomClass.Type
                    </option>
                }
            </select>
            <span asp-validation-for="RoomClassID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Floor" class="form-label">Floor</label>
            <input asp-for="Floor" class="form-control" />
            <span asp-validation-for="Floor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rate" class="form-label">Rate</label>
            <input asp-for="Rate" type="number" class="form-control" />
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="View" class="form-label">View</label>
            <input asp-for="View" class="form-control" />
            <span asp-validation-for="View" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option value="Available" selected="@(Model.Status == RoomStatus.Available)">Available</option>
                <option value="Occupied" selected="@(Model.Status == RoomStatus.Occupied)">Occupied</option>
                <option value="Maintenance" selected="@(Model.Status == RoomStatus.Maintenance)">Maintenance</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="text-center mt-5">
            <button type="submit" class="btn btn-success px-4">Update Room</button>
        </div>

    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
