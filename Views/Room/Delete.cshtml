@model BookingSystem.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container py-5">
    <h2 class="mb-4 text-center fw-bold" style="color: #2F3C7E;">🗑️ Delete Room</h2>

    <h3 class="text-center mb-4">Are you sure you want to delete this room?</h3>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Room ID:</dt>
                        <dd class="col-sm-8">@Model.ID</dd>

                        <dt class="col-sm-4">Room Class:</dt>
                        <dd class="col-sm-8">@(Model.RoomClass?.Type.ToString() ?? "N/A")</dd>

                        <dt class="col-sm-4">Floor:</dt>
                        <dd class="col-sm-8">@Model.Floor</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4">Price:</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="text-center mt-3">
                    <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 200px;" alt="Room Image">
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger py-2 px-4 fs-5 rounded-3 shadow-sm">
            <i class="fas fa-trash-alt"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary py-2 px-4 fs-5 rounded-3 shadow-sm ms-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>