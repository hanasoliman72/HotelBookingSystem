@model List<Room>

@{
    ViewData["Title"] = "Our Rooms";
}

<main>
    <div class="container py-5">
        <div class="row">
            <!-- Filter Section -->
            <aside class="col-md-3">
                <div class="mb-4">
                    <h4 class="mb-3">Filter Rooms</h4>
                    <form method="get" action="@Url.Action("Index", "Room")">
                        <!-- Filter form omitted for brevity -->
                    </form>
                </div>
            </aside>

            <!-- Room List Section -->
            <section class="col-md-9">
                <h3 class="mb-4">Available Rooms</h3>
                <div class="row g-4">
                    @if (Model.Any())
                    {
                        foreach (var room in Model)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@room.RoomClass.Type</h5>
                                        <p class="card-text flex-grow-1">@room.RoomClass.Description</p>
                                        <p class="card-text mb-1"><strong>Price:</strong> $@room.Price / night</p>
                                        <p class="card-text mb-3"><strong>Status:</strong> @room.Status</p>

                                        <a href="@Url.Action("Create", "Booking", new { roomId = room.ID })" class="btn btn-outline-primary mt-auto">Book Now</a>

                                        <!-- Edit button -->
                                        <a href="@Url.Action("Edit", "Room", new { id = room.ID })" class="btn btn-warning btn-sm mt-2">Edit</a>
                                        <!-- Delete button -->
                                        <a href="@Url.Action("Delete", "Room", new { id = room.ID })" class="btn btn-danger btn-sm mt-2" onclick="return confirm('Are you sure you want to delete this room?');">Delete</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-info">No rooms match the selected filters.</div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</main>
