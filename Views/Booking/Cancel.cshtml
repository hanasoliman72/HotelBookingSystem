@model BookingSystem.Models.Booking

@{
    ViewData["Title"] = "Cancel Booking";
}

<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header text-white" style="background: linear-gradient(to right, #d9534f, #c12e2a);">
            <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Cancel Booking</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger mb-4">Are you sure you want to cancel this booking?</h4>

            <div class="booking-details">
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-item">
                            <span class="detail-label">Room Type:</span>
                            <span class="detail-value">@Model.Room.RoomClass.Type</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Check-In:</span>
                            <span class="detail-value">@Model.CheckInDate.ToShortDateString()</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <span class="detail-label">Check-Out:</span>
                            <span class="detail-value">@Model.CheckOutDate.ToShortDateString()</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Total Amount:</span>
                            <span class="detail-value">@Model.PaymentAmount.ToString("C")</span>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="CancelConfirmed" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ID" />

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger py-2 px-4">
                        <i class="fas fa-trash-alt"></i> Confirm Cancellation
                    </button>
                    <a asp-action="MyBookings" class="btn btn-secondary py-2 px-4">
                        <i class="fas fa-arrow-left"></i> Back to My Bookings
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .booking-details {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
        }
        .detail-item {
            display: flex;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        .detail-label {
            font-weight: 600;
            color: #2F3C7E;
            min-width: 120px;
        }
        .detail-value {
            color: #333;
        }
        .btn-danger {
            transition: all 0.3s;
        }
        .btn-danger:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(217, 83, 79, 0.4);
        }
    </style>
}