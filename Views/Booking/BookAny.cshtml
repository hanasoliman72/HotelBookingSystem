@model BookingViewModel

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold" style="color: #2F3C7E;">🛏️ Book Any Available Room</h2>
        <p class="text-muted">Choose your room, dates, and payment method to complete your booking.</p>
    </div>

    <form method="post" class="row g-4 needs-validation">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Room Selection -->
        <div class="col-md-6">
            <label for="RoomID" class="form-label fw-semibold">Select Room <span class="text-danger">*</span></label>
            <select asp-for="Booking.RoomID" class="form-select shadow-sm rounded-3" required>
                <option value="">-- Choose a Room --</option>
                @foreach (var room in Model.Rooms)
                {
                    <option value="@room.ID">
                        @room.RoomClass.Type (Floor @room.Floor) - $@room.Price
                    </option>
                }
            </select>
            <span asp-validation-for="Booking.RoomID" class="text-danger small"></span>
        </div>

        <!-- Check-In Date -->
        <div class="col-md-6">
            <label asp-for="Booking.CheckInDate" class="form-label fw-semibold">Check-In Date <span class="text-danger">*</span></label>
            <input asp-for="Booking.CheckInDate" type="date" class="form-control shadow-sm rounded-3" required />
            <span asp-validation-for="Booking.CheckInDate" class="text-danger small"></span>
        </div>

        <!-- Check-Out Date -->
        <div class="col-md-6">
            <label asp-for="Booking.CheckOutDate" class="form-label fw-semibold">Check-Out Date <span class="text-danger">*</span></label>
            <input asp-for="Booking.CheckOutDate" type="date" class="form-control shadow-sm rounded-3" required />
            <span asp-validation-for="Booking.CheckOutDate" class="text-danger small"></span>
        </div>

        <!-- Payment Amount -->
        <div class="col-md-6">
            <label asp-for="Booking.PaymentAmount" class="form-label fw-semibold">Payment Amount ($) <span class="text-danger">*</span></label>
            <input asp-for="Booking.PaymentAmount" type="number" step="0.01" class="form-control shadow-sm rounded-3" required />
            <span asp-validation-for="Booking.PaymentAmount" class="text-danger small"></span>
        </div>

        <!-- Payment Method -->
        <div class="col-md-6">
            <label asp-for="Booking.paymentMethod" class="form-label fw-semibold">Payment Method <span class="text-danger">*</span></label>
            <select asp-for="Booking.paymentMethod" class="form-select shadow-sm rounded-3" asp-items="Html.GetEnumSelectList<BookingSystem.Models.PaymentMethod>()" required>
                <option value="">-- Select Method --</option>
            </select>
            <span asp-validation-for="Booking.paymentMethod" class="text-danger small"></span>
        </div>

        <!-- Submit Button -->
        <div class="col-12 text-center mt-4">
            <button type="submit" class="btn py-3 px-5 fs-5 rounded-3 shadow-sm text-white" style="background-color: #FFC947;">
                📝 Book Now
            </button>
        </div>

        <!-- Back to Home Button -->
        <div class="col-12 text-center mt-2">
            <a href="@Url.Action("Index", "Home")" class="btn py-3 px-5 fs-5 rounded-3 shadow-sm text-white" style="background-color: #FFC947;">
                🔙 Back to Home
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
